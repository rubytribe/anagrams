<div class="divaliniat">
<div class="divsucces"><%= flash[:success] %></div><br>
<div class="divsucces"><%= flash[:updated] %></div><br>

<table>
<thead>
<th>Name</th>
<th>Description</th>
<th>Price</th>
<th>Added by</th>
<th colspan="3"></th>
</thead>
<tbody>
<% @products.each do |product| %>
<tr>
  <td><span class="textcss2"><%=  product.name%></span></td>
  <td><span class="textcss2"><%=  product.description %></span></td>
  <td><span class="textcss2"><%=  product.price %></span></td>
  <td><span class="textcss2"><%= product.user.name %> <br><%= (product.created_at+ 3.hours).strftime("%d/%m/%Y at %H:%M") %></span></td>
  <td><%= link_to 'Show', product %></td>
  <td><%= link_to 'Edit', edit_product_path(product) %></td>
  <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}%></td>
</tr>
<% end %>
</tbody>
</table>
<br>
 <a href='/products/new'<button type="button" class="btn">Add</button></a>
 </div>

