<div>
<% provide(:title,"Product list") %>
<% @products.each do |product| %>
  <div class="show">
    <%= image_tag(product.image_url, alt: product.name) %>
    <h2> <%= product.name %> </h2>
    <div class="description"><%= product.description %> </div>
    <span class="price"><%= number_to_currency(product.price) %> </span>
    <ul><li><%= link_to "Show", product %></li>
        <li><%= link_to "Edit", '#' %></li>
        <li><%= link_to "Delete", '#' %></li>
    </ul>
  </div>
<% end %>
<span class="new_product_link"><%= link_to "Add a new product" , products_new_path %></span>
</div>
