<% provide(:title, @product.name) %>
<div style="float: left" class="max_img_size"><%= image_tag(@product.image_url, alt: @product.name) %></div>
<div class="show_description">
  <%= @product.description %>
</div></br>
<span style="float: left; position: relative; right: -50px; bottom: -10px" class="price"><%= number_to_currency(@product.price) %> </span>
<ul class="product_control">
  <li><%= link_to "Back", products_path %></li>
  <li style="margin-left: 200px"><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Delete", @product, method: :delete,
                     data: {confirm: 'Are you sure?' } %>
</ul>
